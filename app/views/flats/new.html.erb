<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Flats#new</h1>


      <div class="panel panel-default">
        <div class="panel-heading">
          Publica tu anuncio
        </div>
        <div class="panel-body">
          <!-- <div class="container"> -->
            <%= form_for @flat, html: {multipart: true, class: "formflat"} do |f| %>

              <!-- <div class="row"> -->
                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Título</label>
                     <%= f.text_field :title, placeholder: "Escribe algo atractivo", class: "form-control" %>
                  </div>
                </div>
              <!-- </div> -->
              <!-- <div class="row"> -->
                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Descripción</label>
                     <%= f.text_area :description, rows:5, placeholder: "Cuéntanos lo mejor de tu casa, algo sobre la zona, etc... ", class: "form-control" %>
                  </div>
                </div>
              <!-- </div> -->

              <!-- <div class="row"> -->
                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Dirección</label>
                    <%= f.text_field :address, class: "form-control" %>
                  </div>
                </div>
              <!-- </div> -->

              <!-- <div class="row"> -->
                <div class="col-md-12 select">
                  <div class="form-group">
                    <label>Ciudad</label>
                    <%= f.text_field :city, class: "form-control" %>
                  </div>
                </div>
              <!-- </div> -->

                <!-- <div class="row"> -->
                  <div class="col-md-12 select">
                    <div class="form-group">
                      <label>Amueblado</label>
                      <%= f.check_box :furnished %>
                    </div>
                  </div>
                <!-- </div> -->

                <!-- image upload -->

            <div class="col-md-10">
            <label>Fotos</label>
            <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-default btn-file">
                        Añadir fotos&hellip; <input type="file" multiple>
                    </span>
                </span>
                <input type="text" class="form-control" readonly>
            </div>

            <!-- mike's image upload -->

                <div class="row">
                  <div class="col-md-12 select">
                    <div class="form-group">
                      <span class="btn btn-default btn-file">
                        <i class="fa fa-cloud-upload fa-lg"></i>Upload Photos
                        <%= file_field_tag "image[]", type: :file, multiple: true %>
                      </span>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12 select">
                    <div class="form-group">
                      <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                  </div>
                </div>


             <% end %>
           <!-- </div> -->
        </div>
    </div>
  </div>
</div>












